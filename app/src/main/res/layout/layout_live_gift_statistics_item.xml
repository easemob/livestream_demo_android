<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="60dp">

    <ImageView
        android:id="@+id/iv_gift_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/em_margin_15"
        android:layout_marginStart="@dimen/em_margin_15"
        android:src="@drawable/gift_default_1" />

    <TextView
        android:id="@+id/tv_gift_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="X 200"
        app:layout_constraintLeft_toRightOf="@id/iv_gift_icon"
        app:layout_constraintTop_toTopOf="@id/iv_gift_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_gift_icon"
        android:layout_marginRight="@dimen/em_margin_30"
        android:layout_marginEnd="@dimen/em_margin_30"
        android:layout_marginLeft="@dimen/em_margin_10"
        android:layout_marginStart="@dimen/em_margin_10"
        android:textColor="@color/white"
        android:textSize="@dimen/em_size_normal" />

    <com.hyphenate.easeui.widget.EaseImageView
        android:id="@+id/img_avatar"
        android:layout_width="@dimen/em_margin_20"
        android:layout_height="@dimen/em_margin_20"
        android:src="@drawable/ease_default_avatar"
        app:ease_shape_type="round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="150dp"
        android:layout_marginStart="150dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txt_usernick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:text="小仙女 送出"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/img_avatar"
        app:layout_constraintTop_toTopOf="@id/img_avatar"
        app:layout_constraintBottom_toBottomOf="@id/img_avatar"
        android:layout_marginLeft="@dimen/em_margin_10"
        android:layout_marginStart="@dimen/em_margin_10" />


</androidx.constraintlayout.widget.ConstraintLayout>