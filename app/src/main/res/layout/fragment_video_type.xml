<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_live"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginLeft="@dimen/home_item_width_margin"
            android:layout_marginRight="@dimen/home_item_width_margin"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/live_normal_bg"/>

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:text="@string/em_live_type_normal_title"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_live_content"/>

            <TextView
                android:id="@+id/tv_live_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="190dp"
                android:text="@string/em_live_type_normal_introduction"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/tv_live_title"
                app:layout_constraintTop_toBottomOf="@id/tv_live_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_fast_live"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_marginLeft="@dimen/home_item_width_margin"
            android:layout_marginRight="@dimen/home_item_width_margin"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="14dp">

            <ImageView
                android:id="@+id/iv_fast_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/live_fast_bg"/>

            <TextView
                android:id="@+id/tv_fast_live_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:text="@string/em_live_type_fast_title"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_fast_live_content"/>

            <TextView
                android:id="@+id/tv_fast_live_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxWidth="190dp"
                android:text="@string/em_live_type_fast_introduction"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@id/tv_fast_live_title"
                app:layout_constraintTop_toBottomOf="@id/tv_fast_live_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>