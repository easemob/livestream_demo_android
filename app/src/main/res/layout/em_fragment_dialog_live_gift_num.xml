<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/em_gift_default_name_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:textSize="@dimen/em_size_big"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/em_margin_15"
        android:layout_marginStart="@dimen/em_margin_15"/>

    <ImageView
        android:id="@+id/iv_gift_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/em_live_minus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_gift_num"
        android:layout_marginRight="@dimen/em_margin_10"
        android:layout_marginEnd="@dimen/em_margin_10"/>

    <TextView
        android:id="@+id/tv_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintLeft_toRightOf="@id/tv_gift_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:textColor="@color/white"
        android:textSize="@dimen/em_size_big"/>

    <ImageView
        android:id="@+id/iv_gift_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/em_live_plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_gift_num"
        android:layout_marginLeft="@dimen/em_margin_10"
        android:layout_marginStart="@dimen/em_margin_10"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/em_live_gift_send_bg_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/em_gift_send"
        android:textColor="@color/white"
        android:textSize="@dimen/em_size_big"
        android:layout_marginRight="@dimen/em_margin_15"
        android:layout_marginEnd="@dimen/em_margin_15"/>


</androidx.constraintlayout.widget.ConstraintLayout>